    <QuickGrid Items ="tracks">
        <PropertyColumn Title="Track" Property="@(t => t.Name)" />
        <PropertyColumn Title="Artist" Property="@(t => t.Artist.Name)" />
        <TemplateColumn Title="Link">
            <Template Context="track">
                <a href="@track.Url" target="_blank">🎵 Listen</a>
            </Template>
        </TemplateColumn>
        <TemplateColumn Title="Rating">
            <Template Context="track">
                <input type="number" min="0" max="10" @bind="track.Rating" />
            </Template>
        </TemplateColumn>
        <TemplateColumn Title="Notes">
            <Template Context="track">
                <textarea @bind="track.Notes"></textarea>
            </Template>
        </TemplateColumn>
        <TemplateColumn Title="Save">
            <Template Context="track">
                <button @onclick="() => SaveTrack(track)">Save</button>
            </Template>
        </TemplateColumn>
    </QuickGrid>


}

@code {
